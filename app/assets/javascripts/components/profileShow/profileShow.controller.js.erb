angular
    .module('maphack')
    .controller('ProfileShowController', ProfileShowController);

ProfileShowController.$inject = ['profileService', '$stateParams'];

function ProfileShowController (profileService, $stateParams) {

 	var vm = this;

 	vm.currentUser = {};

	onLoad();

    function onLoad() {
        profileService
            .getUser($stateParams.id)
            .then(function(res){
                console.log(res);
                vm.currentUser = res.data.currentUser;
        });
    }

	
}
